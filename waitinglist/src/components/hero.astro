---
import { Image} from "astro:assets";
import Logo from "../assets/DeepRoots.png";
---
<div class="hero min-h-screen bg-base-100">
  <div class="hero-content flex-col-reverse lg:flex-row-reverse gap-12 w-full max-w-7xl px-6 mx-auto">
    <div class="w-full max-w-md mask mask-hexagon-2" >
      <Image src={Logo} alt="Deep Roots Co-Op" />
    </div>
    <!-- Text + Form -->
    <div class="w-full max-w-xl space-y-6">
      <h1 class="text-5xl font-bold text-white">Join the Waitlist</h1>
      <p class="text-lg text-base-content">
        Deep Roots Co-Op is launching soon. Be part of the community-owned movement that rewards you for supporting local.
      </p>
      <form name="waitlist" method="POST" netlify class="space-y-4">
        <!-- Email Input -->
        <div>
          <label class="label text-base font-medium">Email Address</label>
          <input type="email" name="email" class="input input-bordered w-full" placeholder="you@example.com" required />
        </div>
        <!-- Role Selection -->
        <div>
          <label class="label text-base font-medium">Iâ€™m a:</label>
          <div class="flex gap-4">
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="radio" name="role" value="consumer" class="radio checked:bg-primary" checked />
              <span>Consumer</span>
            </label>
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="radio" name="role" value="business" class="radio checked:bg-primary" />
              <span>Business Partner</span>
            </label>
          </div>
        </div>
        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary w-full text-lg">Notify Me</button>
      </form>
    </div>
  </div>
</div>

